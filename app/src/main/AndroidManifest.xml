<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newmovlex">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".utils.MovlexApp"
        android:theme="@style/Theme.NewMovlex"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".feature.movie.movieDetails.view.MovieDetailsActivity"
            android:exported="true"
            android:theme="@style/status_bar"/>
        <activity
            android:name=".feature.movie.displayMovies.view.HomeMoviesActivity"
            android:exported="true"
            android:theme="@style/status_bar"/>
        <activity
            android:name=".feature.user.signup.view.SignupActivity"
            android:exported="true"
            android:theme="@style/status_bar"/>
        <activity
            android:name=".feature.user.profile.view.ProfileActivity"
            android:exported="true"
            android:theme="@style/status_bar_profile"/>
        <activity
            android:name=".feature.user.forgetPassword.view.ForgetPasswordActivity"
            android:exported="true"
            android:theme="@style/status_bar"/>
        <activity
            android:name=".feature.user.login.view.LoginActivity"
            android:exported="true"
            android:theme="@style/status_bar"/>
        <activity
            android:name=".feature.app.settings.view.SettingsActivity"
            android:exported="true"
            android:theme="@style/whiteThem"/>
        <activity
            android:name=".feature.app.onboarding.view.OnboardingActivity"
            android:exported="true"
            android:theme="@style/status_bar"/>
        <activity
            android:name=".feature.app.splash.view.SplashActivity"
            android:exported="true"
            android:theme="@style/status_bar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>